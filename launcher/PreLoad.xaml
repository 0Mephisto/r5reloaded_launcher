<Window x:Class="launcher.PreLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:launcher"
        mc:Ignorable="d"
        Title="R5Reloaded Launcher" Height="350" AllowsTransparency="True" Width="600" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="launcher_x64.ico" Background="Transparent">
    <Border Background="{StaticResource PrimaryColor}" BorderBrush="{StaticResource AccentColor}" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Image Source="/assets/logo-main-white.png" Margin="78,74,78,74" />
            <TextBlock Text="Loading..." Foreground="{StaticResource PrimaryTextColor}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="381,222,0,0" FontFamily="Bahnschrift SemiBold" FontSize="18" />
        </Grid>
    </Border>
</Window>