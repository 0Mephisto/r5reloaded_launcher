<Window x:Class="launcher.PreLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:launcher"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d"
        Title="R5Reloaded Launcher" Height="350" AllowsTransparency="True" Width="600" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="launcher_x64.ico" Background="Transparent" Loaded="Window_Loaded" Topmost="True" ShowInTaskbar="False">
    <Border Background="{StaticResource ThemePrimary}" BorderBrush="Black" BorderThickness="4" CornerRadius="10">
        <Grid>
            <Grid.Clip>
                <RectangleGeometry x:Name="WindowClip" Rect="0,0,592,342" RadiusX="8" RadiusY="8" />
            </Grid.Clip>
            <Image Source="/assets/Revenant-apex.jpg" Margin="-26,0,-26,-12" />
            <Rectangle Fill="#7F000000" Margin="0,0,0,0" />
            <Image Source="/assets/logo-main-white.png" Margin="169,15,168,225" />
            <TextBlock Text="Loading..." Foreground="{StaticResource ThemePrimaryText}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="506,310,0,0" FontFamily="Bahnschrift SemiBold" FontSize="18" />
        </Grid>
    </Border>
</Window>